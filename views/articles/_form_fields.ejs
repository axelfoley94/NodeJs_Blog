<div class="form-group">
    <label for="title"> Title</label>
    <input type="text" name="title" id="title" class="form-control" required value = <%- JSON.stringify(article.title) %> >
    
</div>

<div class="form-group">
    <label for="description"> Description</label>
    <input type="text" name="description" id="description" class="form-control" required value = <%- JSON.stringify(article.description) %>  >
    
</div>

<div class="form-group">
    <label for="markdown"> Markdown</label>
    <input type="text" name="markdown" id="markdown" class="form-control" required value = <%- JSON.stringify(article.markdown)%>  >
    
</div>

<a href="/v1/articles" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>